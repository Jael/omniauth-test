
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<p>
  <b>Image:</b>
  <br />
  <%= image_tag @post.image_url(:thumb) if @post.image? %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <div>
    <p>
     <strong>Commentd <%= time_ago_in_words comment.created_at %></strong>
     <br />
     <%= comment.content %>
    </p>
  </div>
<% end %>

<%= form_for [@post, Comment.new] do |f| %>
  <div class="field">
    <%= f.label :content, "Comment" %>  <br />
    <%= f.text_area :content, rows: 5 %>
  </div>

  <div>
    <%= f.submit "Add the comment" %>
  </div>

<% end %>
